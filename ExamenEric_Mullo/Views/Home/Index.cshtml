@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Fondo negro para toda la página */
    body {
        background-color: #000000;
        color: #ffffff;
        overflow: hidden; /* Evita el scroll si las caritas salen fuera del área visible */
    }

    #imagenAbajo {
        width: 300px;
        height: 300px;
        background-image: url('/images/imagen.jpg');
        background-size: cover;
        background-position: center;
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        display: block;
    }

    /* Estilo para las caritas felices */
    .carita {
        position: absolute;
        font-size: 24px;
        color: #ffd700; /* Color dorado para las caritas */
    }
</style>

<div class="text-center">
    <h1 class="display-4"><em>Bienvenidos a mi Examen de programación :D</em></h1>
    <p>PROGRAMACION 4 </p>

    <button onclick="mostrarMensaje()" class="btn btn-primary mt-3">Mostrar Mensaje</button>
</div>

<div id="imagenAbajo"></div>

<script>
    function mostrarMensaje() {
        alert("Hola soy Eric Mullo y mi Hobbie es jugar fútbol");
    }

    // Generar varias caritas felices en posiciones aleatorias
    function generarCaritas(numCaritas) {
        for (let i = 0; i < numCaritas; i++) {
            const carita = document.createElement("div");
            carita.classList.add("carita");
            carita.textContent = ":)";

            // Posición aleatoria dentro de la ventana
            carita.style.top = Math.floor(Math.random() * window.innerHeight) + "px";
            carita.style.left = Math.floor(Math.random() * window.innerWidth) + "px";

            document.body.appendChild(carita);
        }
    }

    // Genera 20 caritas felices al cargar la página
    window.onload = () => {
        generarCaritas(20);
    };
</script>
