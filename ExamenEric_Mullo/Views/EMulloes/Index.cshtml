@model IEnumerable<ExamenEric_Mullo.Models.EMullo>

@{
    ViewData["Title"] = "Tabla de clientes";
}

<style>
    body {
        background-color: black;
        color: white; /* Cambiar el texto a blanco para mejor visibilidad */
    }
</style>

<h1 class="text-primary">Tabla de clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="bg-primary text-white">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Sueldo)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Correo)</th>
            <th>@Html.DisplayNameFor(model => model.ClienteAntiguo)</th>
            <th>@Html.DisplayNameFor(model => model.Pedido)</th>
            <th>@Html.DisplayNameFor(model => model.Celular)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Sueldo)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                <td>@Html.DisplayFor(modelItem => item.ClienteAntiguo)</td>
                <td>@Html.DisplayFor(modelItem => item.Pedido)</td>
                <td>@Html.DisplayFor(modelItem => item.Celular.Id)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
